{% extends 'base.html.twig' %}

{% block title %}{{ beer.name }}{% endblock %}

{% block body %}

  <section class="beer__focus">

    <p>Beer Focus :</p>

    <ul>
      <li>{{ beer.name }}</li>
      <li>{{ beer.degree }}</li>

      <a>{{ beer.degree }}</a>

      <a href="{{ path('country:focus', { 'id' : beer.country.id }) }}">
        {{ beer.country.name }}
      </a>


      {% for category in beer.categories %}
        <li>{{ category.name }}</li>
      {% endfor %}
    </ul>

  </section>
{% endblock %}
