{% extends 'base.html.twig' %}

{% block title %}Hello BeerController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">

        This friendly message is coming from:
        <ul>
            {% for beer in beers %}
                <li>
                    {# <a href="{{ path('beer', { 'id' : beer.id }) }}"> #}
                    <a href="beer/{{beer.id}}">
                        {{ beer.name }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
